

.user-view {
  width: 90%;
  height: 300rpx;
  border-radius: 15rpx 15rpx 0 0 ;
  border: 5rpx solid lightgray;
  background-color: white;
  margin: 30rpx 5%;
}
.user-view-cell {
  height: 100rpx;
  /* background-color: red; */
  border-bottom: 1rpx solid lightgray;
}
.user-view-title {
  /* background-color: red; */
  position: relative;
  left: 20rpx;
  top: 30rpx;
  font-size: 32rpx;
}
.user-view-input {
  /* background-color: red;  */
  height: 60rpx;
  min-width: 65%;
  max-width: 68%;
  position: relative;
  left: 30%;
  top: -23rpx;
}
.section {
  position: relative;
  left: 6%;
  font-size: 35rpx;
  color: #888888;
}
 .order-list-view {
  background-color: white;
  /* height: 300rpx; */
  border-radius: 0 0 15rpx 15rpx ;
  border: 5rpx solid lightgray; 
  margin: 30rpx 5% 200rpx 5%;
} 
.order-cell {
  height: 100rpx;
  border-bottom: 1rpx solid lightgray;
}
.order-price {
  position: relative;
  left: 40rpx;
  top: 30rpx;
  font-size: 32rpx;
  color: lightslategray;
}
.order-trash {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  right: 50rpx;
  padding: 25rpx;
}
.order-clearing {
  background-color: red;
  width: 100%;
  height: 120rpx;
  position: fixed;
  bottom: 0;
}
.order-total {
  font-size: 40rpx;
  padding: 30rpx;
  color: white;
  display: flex;
  justify-content: center;
}
.oerder-help-view {
  position: fixed;
  bottom: 120rpx;
  width: 100%;
  height: 80rpx;
   /* background-color: yellow;   */
}
.help-text {
  padding-left: 30rpx;
  color: lightslategray;
}
.help-img {
  width: 50rpx;
  height: 50rpx;
  position: relative;
  top: 13rpx;

}
